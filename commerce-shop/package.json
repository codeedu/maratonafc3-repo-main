{
  "name": "commerce-shop",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "console": "ts-node -r tsconfig-paths/register --transpile-only src/console.ts",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "frontend-dev": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "frontend-watch": "npm run frontend-dev -- --watch",
    "frontend-watch-poll": "npm run frontend-watch -- --watch-poll",
    "frontend-prod": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^1.15.1",
    "@loopback/repository": "^2.1.0",
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@types/lodash": "^4.14.155",
    "axios": "^0.21.1",
    "bootstrap": "^4.5.0",
    "class-transformer": "^0.2.3",
    "commander": "^5.1.0",
    "connect-redis": "^4.0.4",
    "express-handlebars": "^4.0.4",
    "express-session": "^1.17.1",
    "handlebars-helpers": "^0.10.0",
    "jquery": "^3.5.1",
    "lodash": "^4.17.15",
    "loopback-connector-esv6": "https://github.com/codeedu/loopback-connector-elastic-search/tarball/master",
    "loopback-datasource-juggler": "^4.21.2",
    "nestjs-console": "^3.0.5",
    "pagarme": "^4.11.0",
    "popper.js": "^1.16.1",
    "psl": "^1.8.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^5.7.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "yup": "^0.29.1"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.10.1",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/express-handlebars": "^3.1.0",
    "@types/express-session": "^1.17.0",
    "@types/jest": "25.1.4",
    "@types/node": "^13.9.1",
    "@types/redis": "^2.8.22",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.1.0",
    "laravel-mix": "^5.0.4",
    "prettier": "^1.19.1",
    "resolve-url-loader": "^3.1.1",
    "sass": "^1.26.8",
    "sass-loader": "^8.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "~3.8.3",
    "vue-template-compiler": "^2.6.11"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
